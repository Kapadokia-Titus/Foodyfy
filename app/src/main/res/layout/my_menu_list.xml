<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bodyColour"
    android:paddingStart="@dimen/layoutMargin"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:id="@+id/checkout_list_layout"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:id="@+id/status_strip"
                android:background="@color/colorPrimaryDark"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                tools:src="@drawable/biriani"
                android:id="@+id/checkout_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/food_checkout_name"
                    android:textSize="22sp"
                    android:paddingLeft="@dimen/layoutMargin"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text="Biriani"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_menu_description"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:textStyle="italic"
                        android:textColor="@color/colorPrimaryDark"
                        tools:text="My short description"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="@dimen/layoutMargin"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/layoutMargin"
                            android:text="Quantity: "
                            android:textColor="@color/colorPrimaryDark" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/my_menu_quantity"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            tools:text="200"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="@dimen/layoutMargin"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/corners">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/layoutMargin"
                            android:text="Ksh."
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/my_menu_price"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            tools:text="2"/>


                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/default_icon_dime"
                        android:layout_height="@dimen/default_icon_dime"
                        android:src="@drawable/ic_cancel"
                        android:id="@+id/ic_cancel_imv"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:layout_gravity="center"
                        android:textColor="@color/red"
                        android:id="@+id/cancel_action_tv"/>

                    <ImageView
                        android:layout_width="@dimen/default_icon_dime"
                        android:layout_height="@dimen/default_icon_dime"
                        android:src="@drawable/ic_update"
                        android:layout_marginStart="@dimen/padding_left"
                        android:id="@+id/ic_update_imv"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/update"
                        android:layout_gravity="center"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/update_action_tv"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>