<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bodyColour"
    android:paddingStart="@dimen/layoutMargin"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:id="@+id/checkout_list_layout"
    android:layout_height="150dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                tools:src="@drawable/biriani"
                android:id="@+id/checkout_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/food_checkout_name"
                    android:textSize="22sp"
                    android:paddingLeft="@dimen/layoutMargin"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text="Biriani"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/food_checkout_price"
                    android:textSize="18sp"
                    android:paddingLeft="@dimen/layoutMargin"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text="200"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:id="@+id/food_checkout_quantity"
                    android:textSize="18sp"
                    android:paddingLeft="@dimen/layoutMargin"
                    android:textColor="@color/colorPrimaryDark"
                    tools:text="2"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>