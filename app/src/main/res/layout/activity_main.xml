<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bodyColour"
    android:paddingTop="@dimen/layoutMargin"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutMargin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foodyfy"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="44sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slogan"
                android:fontFamily="casual"
                android:textSize="22sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/layoutMargin"
                android:layout_marginRight="@dimen/layoutMargin"
                android:layout_marginTop="@dimen/layoutMargin"
                android:padding="5sp"
                android:background="@drawable/rounded">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/search_icon"
                     android:layout_gravity="center"
                    android:src="@drawable/ic_search_black_24dp"
                    android:layout_marginStart="10dp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:id="@+id/search_text"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:background="@drawable/round_free"
                    android:hint="Search" />

            </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/layoutMargin"
                    android:layout_height="wrap_content"
                    android:id="@+id/foodCategory"/>





        </LinearLayout>
    </ScrollView>

</LinearLayout>