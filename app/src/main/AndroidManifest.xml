<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kapadokia.nyandoro.foodclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/food_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/food_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity android:name=".TestActivity"></activity>
        <activity android:name=".MyMenu" />
        <activity android:name=".CreateFood" />
        <activity
            android:name=".ConfirmationPopup"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Checkout"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FoodDetails"
            android:theme="@style/AppTheme" />
    </application>

</manifest>